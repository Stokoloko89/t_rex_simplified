{
  "name": "t-rex-microfrontend-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "microfrontends/*",
    "host-app"
  ],
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "start": "pnpm --filter \"microfrontends/*\" start",
    "build": "pnpm --filter \"microfrontends/*\" build",
    "start:host": "pnpm --filter host-app start",
    "build:host": "pnpm --filter host-app build",
    "start:shared": "pnpm --filter shared-ui start",
    "build:shared": "pnpm --filter shared-ui build",
    "dev": "concurrently \"pnpm start:host\" \"pnpm --filter buying-flow start\"",
    "install:all": "pnpm install",
    "build:all": "pnpm -r build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.0.0",
      "rimraf": "^5.0.0"
    }
  }
}